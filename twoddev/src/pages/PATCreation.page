    <apex:pageMessages id="msgId"/>
    <apex:sectionHeader subtitle="New Policy Applicability Term"
        title="Policy Applicability Term" />
    <apex:form id="frm">

        <apex:inputhidden rendered="{!$ObjectType.Policy_Definition__c.fields.Name.Accessible}"
            id="selectedRecord" value="{!selectedObjectIds}" />
        <apex:actionFunction name="callBackFunction" reRender="PDAppTerm,frm"
            action="{!addNewObjectRecord}" status="status" />

        <apex:pageblock id="PDAppTerm">

            <apex:pageBlockSection title="Policy Applicability Terms"
                showHeader="false" columns="2" id="block2">

                <apex:pageBlockSectionItem >
                    <apex:outputLabel for="pType" value="Applicability Type" />
                    <apex:actionregion >
                        <apex:inputField value="{!PDAppsWrapr.PolicyAppTerm.Applicability_Term_Type__c}"
                            required="true" id="pType">
                            <apex:actionSupport action="{!renderPage}" event="onchange"
                                rerender="PDAppTerm,frm" status="status" />
                        </apex:inputField>
                    </apex:actionregion>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel for="displayType" value="Aplicability Sub-Type" />
                    <apex:inputField value="{!PDAppsWrapr.PolicyAppTerm.Applicability_SubType__c}"
                        id="displayType" required="true">
                        <apex:actionSupport event="onchange" rerender="PDAppTerm"
                            status="status" />
                    </apex:inputField>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                   <!-- <apex:outputLabel for="pMapping" value="WR Field Mapping" />
                    <apex:inputField value="{!PDAppsWrapr.PolicyAppTerm.WR_Field_Mapping__c}"
                        id="pMapping" /> -->
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem rendered="{!AND(( PDAppsWrapr.PolicyAppTerm.Applicability_Term_Type__c == 'Referred by ID' ),NOT(PDAppsWrapr.PolicyAppTerm.Applicability_SubType__c==''))}">
                    <apex:outputLabel for="psearch2" value="Related To" />
                    <apex:variable var="c" value="{!1}">
                        <!--
                    <apex:inputText value="{!PDAppsWrapr.Name}" id="psearch2" maxlength="200" size="20" >
                    <apex:actionSupport event="onchange" rerender="PDAppTerm,frm" status="status"/>
                    </apex:inputText>
                    -->
                        <a href="#" id="acc3_lkwgt"
                            onclick="openLookupPopup('{!HTMLENCODE(PDAppsWrapr.PolicyAppTerm.Applicability_SubType__c)}', 'Multi');"
                            tabindex="2" title="Parent Lookup (New Window)"
                            style="text-decoration: none;"> <apex:outputText value="Click here to select related {!PDAppsWrapr.PolicyAppTerm.Applicability_SubType__c}"
                                rendered="{!$ObjectType.Policy_Applicability_Term__c.fields.Applicability_SubType__c.Accessible}" />
                            <!--<img src="/s.gif" alt="Parent Lookup (New Window)" class="lookupIcon" onblur="this.className = 'lookupIcon';" onfocus="this.className = 'lookupIconOn';" onmouseout="this.className = 'lookupIcon';this.className = 'lookupIcon';" onmouseover="this.className = 'lookupIconOn';this.className = 'lookupIconOn';" title="Parent Lookup (New Window)"/>-->
                        </a>
                    </apex:variable>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem rendered="{!( PDAppsWrapr.PolicyAppTerm.Applicability_Term_Type__c == 'Referred by Text')}">
                    <apex:outputLabel for="pLabel" value="Related To" />
                    <apex:inputText value="{!PDAppsWrapr.PolicyAppTerm.Applicability_Label__c}"
                        rendered="{!$ObjectType.Policy_Applicability_Term__c.fields.Applicability_Label__c.Accessible}"
                        id="pLabel" maxlength="200" size="20" required="true" />
                </apex:pageBlockSectionItem>


            </apex:pageBlockSection>

            <apex:pageBlockButtons location="bottom">
                <apex:commandButton action="{!SavePDRecord}" value="Save"
                    rendered="{!$ObjectType.Policy_Applicability_Term__c.Createable}" />
                <apex:commandButton action="{!cancel}" value="Cancel"
                    immediate="true" />
            </apex:pageBlockButtons>

            </apex:pageBlock>

            <apex:pageBlock id="selBlock" title="Selected Records"
                rendered="{!isRendered}">
                <apex:pageBlockTable value="{!fieldValueWrapperRecordList}" var="wrapperRec">
                    <apex:column >
                        <apex:inputCheckbox value="{!wrapperRec.isSelected}"/>
                    </apex:column>
                    <apex:repeat value="{!fieldList}" var="fName">
                        <apex:column >
                            <apex:facet name="header">
                                <apex:outputLabel value="{!mapApiNameLabel[fName]}" />
                            </apex:facet>
                            <apex:outputText value="{!wrapperRec.objMap[fName]}" />
                        </apex:column>
                    </apex:repeat>
                </apex:pageBlockTable>
                
                <apex:pageBlockButtons location="bottom">
                    <apex:commandButton action="{!deletePDRecord}" value="Delete"/>
                </apex:pageBlockButtons>
            </apex:pageBlock>

            <apex:outputpanel >
                <apex:actionstatus id="status">
                    <apex:facet name="start">
                        <div class="waitingSearchDiv" id="el_loading"
                            style="background-color: #fbfbfb; height: 100%; opacity: 0.65; width: 100%;">
                            <div class="waitingHolder" style="top: 74.2px; width: 91px;">
                                <img class="waitingImage" src="/img/loading.gif"
                                    title="Please Wait..." /> <span class="waitingDescription">Please
                                    Wait...</span>
                            </div>
                        </div>
                    </apex:facet>
                </apex:actionstatus>
            </apex:outputpanel>
    </apex:form>


    <script>
    var newWin;
        function openLookupPopup(ObjectName,selected){ 
            var t =null;//document.getElementById('psearch2').value;
            var url;
            url ="/apex/ObjectLookup?oName="+ObjectName+"&displayType="+selected;
            newWin=window.open(url, 'Popup','height=500,width=650,left=400,top=150,resizable=no,scrollbars=yes,toolbar=no,status=no');
            return false;
        }
        
    function closeLookupPopup(type){
       if (null!=newWin)
       {
          newWin.close();
       }
        callBackFunction();
    }
    
    </script>

</apex:page>